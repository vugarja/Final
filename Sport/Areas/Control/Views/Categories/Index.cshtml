@model IEnumerable<Sport.Models.Category>

@{
    ViewBag.Title = "Məkan növləri";
}


<p>
    @Html.ActionLink("Yenisini yarat", "create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Əməliyyatlar</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Dəyiş", "edit", new { id=item.Id }) |
            @Html.ActionLink("Detallar", "details", new { id=item.Id }) |
            @Html.ActionLink("Sil", "delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

